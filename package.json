{
  "name": "spark.js",
  "version": "0.0.1",
  "description": "Real-Time GPU Texture Codecs for the Web",
  "main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "serve": "vite --host",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "typescript",
    "library",
    "modern",
    "scalable",
    "framework"
  ],
  "author": {
    "name": "Ignacio Castano",
    "email": "castano@ludicon.com",
    "url": "https://ludicon.com/sparkjs/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ludicon/spark.js.git"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "vite": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
